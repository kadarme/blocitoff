<% if current_user %>
 <%= form_for [@list, @list.items.new] do |f| %>
    <div class="form-group">
      <%= f.text_field :name, class: 'form-control', placeholder: 'New To-Do Item' %>
    </div>
    <div class="form-group">
      <%= f.submit "Add To-Do Item", class: 'btn-sm btn-success' %>
    </div>
 <% end %>
<% end %>

