<% if @list.nil? %>
  <%= link_to "New To-do List", new_list_path, class: 'btn btn-success' %>
<% end %>

<h2><%= @list.title %>
  <%= link_to "Edit List", edit_list_path(@list), class: 'btn-sm btn-success' %>
  <%= link_to "Delete List", @list, method: :delete, class: 'btn-sm btn-danger', data: { confirm: 'Are you sure you want to delete this list?' } %>
</h2>

<div class="container">
  <div class="col-md-8">
      <%= render 'items/form', list: @list %>
    <div class="row">
        <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>To-Do Item</th>
            <th>Days Left</th>
            <th>Mark Complete</th>
          </tr>
        </thead>
        <tbody>
          <%= render @items, list: @list %>
        </tbody>
      <table>
   </div>
  </div>
</div>

      
    






